<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="domapi.form.type" class="DomBase\DomApiBundle\Form\Type\EasyAdminFormType">
            <argument type="service" id="domapi.config.manager" />
            <argument type="collection" /> <!-- type configurators -->
            <tag name="form.type" alias="domapi" />
        </service>

        <service id="domapi.form.type.filters" class="DomBase\DomApiBundle\Form\Type\EasyAdminFiltersFormType">
            <argument type="service" id="domapi.config.manager"/>
            <argument type="collection" /> <!-- type configurators -->
            <tag name="form.type" alias="domapi_filters" />
        </service>

        <service id="domapi.form.type.autocomplete" class="DomBase\DomApiBundle\Form\Type\EasyAdminAutocompleteType">
            <argument type="service" id="domapi.config.manager"/>
            <tag name="form.type" alias="domapi_autocomplete" />
        </service>

        <service id="domapi.form.type.batch" class="DomBase\DomApiBundle\Form\Type\EasyAdminBatchFormType">
            <argument type="service" id="domapi.config.manager"/>
            <tag name="form.type" alias="domapi_batch" />
        </service>

        <service id="domapi.form.type.divider" class="DomBase\DomApiBundle\Form\Type\EasyAdminDividerType">
            <tag name="form.type" alias="domapi_divider" />
        </service>

        <service id="domapi.form.type.section" class="DomBase\DomApiBundle\Form\Type\EasyAdminSectionType">
            <tag name="form.type" alias="domapi_section" />
        </service>

        <service id="domapi.form.type.group" class="DomBase\DomApiBundle\Form\Type\EasyAdminGroupType">
            <tag name="form.type" alias="domapi_group" />
        </service>

        <service id="domapi.form.type.extension" class="DomBase\DomApiBundle\Form\Extension\EasyAdminExtension">
            <argument type="service" id="request_stack" on-invalid="null" />
            <tag name="form.type_extension" alias="form" extended-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>

        <!-- Type Configurators -->

        <service id="domapi.form.type.configurator.textarea" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\TextareaTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="40" />
        </service>

        <service id="domapi.form.type.configurator.autocomplete" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\AutocompleteTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="30" />
        </service>

        <service id="domapi.form.type.configurator.collection" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\CollectionTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="20" />
        </service>

        <service id="domapi.form.type.configurator.checkbox" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\CheckboxTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="10" />
        </service>

        <service id="domapi.form.type.configurator.type" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\TypeConfigurator">
            <argument type="service" id="domapi.config.manager" />
            <tag name="domapi.form.type.configurator" priority="0" />
        </service>

        <service id="domapi.form.type.configurator.entity" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\EntityTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="-20" />
        </service>

        <service id="domapi.form.type.configurator.ivory_ckeditor" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\IvoryCKEditorTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="-130" />
        </service>

        <service id="domapi.form.type.configurator.fos_ckeditor" public="false"
                 class="DomBase\DomApiBundle\Form\Type\Configurator\FOSCKEditorTypeConfigurator">
            <tag name="domapi.form.type.configurator" priority="-130" />
        </service>

        <!-- Type Configurators -->

        <service id="domapi.filter.registry" class="DomBase\DomApiBundle\Form\Filter\FilterRegistry" public="true">
            <argument type="collection" /> <!-- filter types map -->
            <argument type="iterator" /> <!-- filter types guessers -->
        </service>
        <service id="DomBase\DomApiBundle\Form\Filter\FilterRegistry" alias="domapi.filter.registry" public="true" />

        <service id="domapi.filter.extension" class="Symfony\Component\Form\Extension\DependencyInjection\DependencyInjectionExtension">
            <argument /><!-- All services with tag "domapi.filter.type" are stored in a service locator -->
            <argument type="collection" />
            <argument type="iterator" />
        </service>

        <service id="domapi.filter.type_guesser.doctrine" class="DomBase\DomApiBundle\Form\Filter\Guesser\DoctrineOrmFilterTypeGuesser">
            <argument type="service" id="doctrine" />
            <tag name="domapi.filter.type_guesser" />
        </service>

        <service id="domapi.form.guesser.missing_doctrine_orm_type_guesser" public="true"
                 class="DomBase\DomApiBundle\Form\Guesser\MissingDoctrineOrmTypeGuesser">
            <argument type="service" id="doctrine" />
            <tag name="form.type_guesser" />
        </service>

        <service id="domapi.filter.type.array" class="DomBase\DomApiBundle\Form\Filter\Type\ArrayFilterType">
            <tag name="domapi.filter.type" alias="array" />
        </service>

        <service id="domapi.filter.type.boolean" class="DomBase\DomApiBundle\Form\Filter\Type\BooleanFilterType">
            <tag name="domapi.filter.type" alias="boolean" />
        </service>

        <service id="domapi.filter.type.comparison" class="DomBase\DomApiBundle\Form\Filter\Type\ComparisonFilterType">
            <tag name="domapi.filter.type" alias="comparison" />
        </service>

        <service id="domapi.filter.type.date" class="DomBase\DomApiBundle\Form\Filter\Type\DateTimeFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\DateType</argument>
            <tag name="domapi.filter.type" alias="date" />
        </service>

        <service id="domapi.filter.type.dateinterval" class="DomBase\DomApiBundle\Form\Filter\Type\ComparisonFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\DateIntervalType</argument>
            <argument type="collection" />
            <argument type="string" />
            <argument type="collection">
                <argument key="type">datetime</argument>
            </argument>
            <tag name="domapi.filter.type" alias="dateinterval" />
        </service>

        <service id="domapi.filter.type.datetime" class="DomBase\DomApiBundle\Form\Filter\Type\DateTimeFilterType">
            <tag name="domapi.filter.type" alias="datetime" />
        </service>

        <service id="domapi.filter.type.decimal" class="DomBase\DomApiBundle\Form\Filter\Type\ComparisonFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\NumberType</argument>
            <argument type="collection">
                <argument key="input">string</argument>
            </argument>
            <tag name="domapi.filter.type" alias="decimal" />
        </service>

        <service id="domapi.filter.type.entity" class="DomBase\DomApiBundle\Form\Filter\Type\EntityFilterType">
            <tag name="domapi.filter.type" alias="entity" />
        </service>

        <service id="domapi.filter.type.float" class="DomBase\DomApiBundle\Form\Filter\Type\ComparisonFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\NumberType</argument>
            <tag name="domapi.filter.type" alias="float" />
        </service>

        <service id="domapi.filter.type.integer" class="DomBase\DomApiBundle\Form\Filter\Type\ComparisonFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\IntegerType</argument>
            <tag name="domapi.filter.type" alias="integer" />
        </service>

        <service id="domapi.filter.type.text" class="DomBase\DomApiBundle\Form\Filter\Type\TextFilterType">
            <tag name="domapi.filter.type" alias="text" />
        </service>

        <service id="domapi.filter.type.textarea" class="DomBase\DomApiBundle\Form\Filter\Type\TextFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\TextareaType</argument>
            <tag name="domapi.filter.type" alias="textarea" />
        </service>

        <service id="domapi.filter.type.time" class="DomBase\DomApiBundle\Form\Filter\Type\DateTimeFilterType">
            <argument type="string">Symfony\Component\Form\Extension\Core\Type\TimeType</argument>
            <tag name="domapi.filter.type" alias="time" />
        </service>
    </services>
</container>
